   '("V" . scroll-down-command)
   '("w" . meow-mark-word)
   '("W" . meow-mark-symbol)
   '("x" . meow-line-expand)
   '("X" . ignore)
   '("y" . meow-save)
   '("Y" . meow-sync-grab)
   '("z" . meow-pop-selection)
   '("Z" . ignore)
   '("/" . avy-goto-char-timer)
   '("<" . xref-go-back)
   '(">" . xref-go-forward)
   '("'" . meow-replace)
   '("<escape>" . ignore)))

(use-package meow
  :config
  (setq meow-expand-hint-counts
	'((line . 30)
	  (find . 30)
	  (till . 30)))
  (meow-setup)
  (meow-global-mode)
  )
